<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.View.DetailView">

    <ContentPage.Content>
        
        <StackLayout Margin="20">
            <Label Text="Este detail"/>
            <Image Source="{Binding image}" Aspect="AspectFit" HeightRequest="200" />
            <Label Text="{Binding name}" FontSize="Title" Margin="0,10,0,0" />
            <Label Text="{Binding species}" Margin="0,5,0,0" />
            <Label Text="{Binding status}" Margin="0,5,0,0" />
            <Label Text="{Binding gender}" Margin="0,5,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>