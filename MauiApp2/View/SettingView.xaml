<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.View.SettingView"
             xmlns:p="clr-namespace:MauiApp2.Properties"
             xmlns:viewModels="clr-namespace:MauiApp2.ViewModels">
    <ContentPage.BindingContext>
        <viewModels:SettingViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="{x:Static p:Resources.CIdiomaEsp}" Clicked="BtnIdiomaEspañol_Clicked"/>
            <Button Text="{x:Static p:Resources.CIdiomaIng}" Clicked="BtnIdiomaIngles_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>